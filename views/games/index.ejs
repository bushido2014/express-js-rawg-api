<div class="container py-2">




   <div class="d-flex justify-content-between align-items-center flex-wrap">
   <h1>All Games</h1>



   <form action="/games" method="GET" >
   <div class="input-group">
     <div class="form-outline">
       <input type="search" id="form1" class="form-control" name="searchTerm"  value="<%= searchTerm %>" autocomplete="off"/>
       <label class="form-label" for="form1">Search</label>
     </div>
     <button type="submit" class="btn btn-rawg">
       <i class="fas fa-search"></i>
     </button>
   </div>
     </form>
   </div>
   <div class="row">

     <% games.forEach(game => { %>
       <div class="col-lg-4 col-md-6 col-sm-12 my-2">
          <div class="card card-game">
            <div class="card-img">
            <img src="<%= game.background_image %>" class="img-top">
            </div>
            <div class="card-body">

               <div class="d-flex justify-content-between align-items-center">
                <div class="icons">
                  <% game.parent_platforms.forEach(platform => { %>
                    <% if (platform.platform.name === 'PC') { %>
                      <i class="fa-brands fa-windows"></i>
                    <% } else if (platform.platform.name === 'Linux') { %>
                      <i class="fa-brands fa-linux"></i>
                    <% } else if (platform.platform.name === 'PlayStation') { %>
                      <i class="fa-brands fa-playstation"></i>
                    <% } else if (platform.platform.name === 'Xbox') { %>
                      <i class="fa-brands fa-xbox"></i>
                    <% } else if (platform.platform.name === 'Apple Macintosh') { %>
                      <i class="fa-brands fa-apple"></i>
                    <% } else if (platform.platform.name === 'Nintendo') { %>
                      <svg xmlns="http://www.w3.org/2000/svg" width="1rem" class="nintendo-icon" viewBox="0 0 32 32">
                        <path fill="currentColor" d="M0 .803h9.469L22.598 22V.803h9.401v30.395h-9.385L9.411 10.001v21.197H-.001z" />
                      </svg>
                    <% } else if (platform.platform.name === 'Android') { %>
                      <i class="fa-brands fa-android"></i>
                    <% } %>
                  <% }) %>
                </div>
                    <div>
                      <span class="<%= game.metacritic <= 80 ? 'metacritic metascore-yellow' : 'metacritic metascore-green' %>">
                        <%= game.metacritic %>
                      </span>
                    </div>
                  </div>
                    
              <h5 class="py-3"><%= game.name %> </h5>


                     <div class="mt-2">
              <a href="/games/<%= game.slug %>" class="btn btn-rawg">Show more like this</a>
                     </div>
            </div>
          </div>
        </div>
     <% }); %>

   </div>

       <nav aria-label="pagination-game" class="pt-4">
         <ul class="pagination">

           <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
             <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
           </li>

           <% for (let i = 1; i <= totalPages; i++) { %>
             <li class="page-item <%= currentPage === i ? 'active' : '' %>">
               <a class="page-link" href="?page=<%= i %>"><%= i %></a>
             </li>
           <% } %>

           <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
             <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
           </li>
         </ul>
       </nav> 







 </div>
