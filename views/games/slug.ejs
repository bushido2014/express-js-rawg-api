<div class="container py-2 details">
   <div class="row">
     
      <div class="col-md-12 col-sm-12 my-2">
       <h2> <%= game.name %></h2>
        <div class="row py-3">
          <div class="col-md-6 col-sm-12 my-2">

            
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% if (game.screenshots && game.screenshots.length > 0) { %>
                  <% game.screenshots.forEach((screenshot, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                      <img src="<%= screenshot.image %>" class="d-block w-100" alt="Screenshot">
                    </div>
                  <% }); %>
                <% } else { %>
                  <div class="carousel-item active">
                    <p>Nu existÄƒ capturi de ecran disponibile pentru acest joc.</p>
                  </div>
                <% } %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>




            
            </div>
          <div class="col-md-6 col-sm-12 my-2">
            <h3 class="mb-3">Details</h3>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">

                <div class="icons">
                  <% game.parent_platforms.forEach(platform => { %>
                    <% if (platform.platform.name === 'PC') { %>
                      <i class="fa-brands fa-windows"></i>
                    <% } else if (platform.platform.name === 'Linux') { %>
                      <i class="fa-brands fa-linux"></i>
                    <% } else if (platform.platform.name === 'PlayStation') { %>
                      <i class="fa-brands fa-playstation"></i>
                    <% } else if (platform.platform.name === 'Xbox') { %>
                      <i class="fa-brands fa-xbox"></i>
                    <% } else if (platform.platform.name === 'Apple Macintosh') { %>
                      <i class="fa-brands fa-apple"></i>
                    <% } else if (platform.platform.name === 'Nintendo') { %>
                      <svg xmlns="http://www.w3.org/2000/svg" width="1rem" class="nintendo-icon" viewBox="0 0 32 32">
                        <path fill="currentColor" d="M0 .803h9.469L22.598 22V.803h9.401v30.395h-9.385L9.411 10.001v21.197H-.001z" />
                      </svg>
                    <% } else if (platform.platform.name === 'Android') { %>
                      <i class="fa-brands fa-android"></i>
                    <% } %>
                  <% }) %>
                </div>



              </li>
              
              <li class="list-group-item"><span>Release date</span><span><%= game.release_date %></span></li>
              <li class="list-group-item"><span>Ratings</span><span><%= game.rating %></span></li>
              <li class="list-group-item"><span>Website</span><span>
                <a href="<%= game.website %>" class="game-website"><i class="fa-solid fa-arrow-up-right-from-square"></i></a>
              </span></li>
