                                <% } else if (storeDetail.store.name === 'Xbox Store') { %>
                                   <i class="fa-brands fa-xbox ms-1"></i>
                                  <% } else if (storeDetail.store.name === 'Xbox 360 Store') { %>
                                     <i class="fa-brands fa-xbox ms-1"></i>
                                    <% } else if (storeDetail.store.name === 'Nintendo Store') { %>
                                      <svg xmlns="http://www.w3.org/2000/svg" class="ms-1" width="1.3rem" style="margin-top: -2px;"
                                        viewBox="0 0 32 32">
                                        <path fill="currentColor" d="M0 .803h9.469L22.598 22V.803h9.401v30.395h-9.385L9.411 10.001v21.197H-.001z" />
                                      </svg>
                                        <% } else if (storeDetail.store.name === 'App Store') { %>
                                          <i class="fa-brands fa-app-store ms-1"></i>
                                          <% } else if (storeDetail.store.name === 'GOG') { %>
                                            <svg xmlns="http://www.w3.org/2000/svg" class="ms-1" width="1.3rem"  viewBox="0 0 32 32">
