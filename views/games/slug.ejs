            </ul>
            </div>
             </div>
       <div class="details-description border-top pt-3"> <%- game.description %> </div>
      </div>
  </div>

          
            
   
      <% if (game.videos && game.videos.length > 0) { %>
        <section class="video-games">    
          <div class="row">
            <% for (let i = 0; i < Math.min(3, game.videos.length); i++) { %>
              <div class="col-md-4">
                <div class="video-item">
                  
                  <video controls preload="none" poster="<%= game.videos[i].preview %>">
                    <source src="<%= game.videos[i].data.max %>" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
                  <h6><%= game.videos[i].name %></h6>
                </div>
              </div>
            <% } %>
          </div>
        </section>
      <% } %>

  <% if (sameGames.length > 0) { %>
 <section class="same-games py-4">          
 <h3> Other games in the series: </h3>
  <div class="row">
   
     <% sameGames.forEach(game => { %>
     <div class="col-lg-2 col-md-4 col-sm-12">
       <a href="/games/<%= game.slug %>" class="same-card card card-hover border-0 shadow-sm my-3">
       <img src="<%= game.background_image %>" class="card-img-top">
       <div class="card-body">
       <div class="card-title"><%= game.name %></div>
       </div>
       </a>
     </div>
       <% }); %>
         
  
  </div>
</section> 
 <% } %>
   

             
                  <% if (game && game.platforms && game.platforms.length > 0) { %>
                    <div class="py-2">
                      <% let requirementsExist = false; %>
                      <% game.platforms.forEach(platformData => { %>
                        <% if (platformData.requirements && (platformData.requirements.minimum || platformData.requirements.recommended)) { %>
                          <% requirementsExist = true; %>
                          <span class="mx-1 text-uppercase fw-bold block lh-lg">System requirements for <%= platformData.platform.name %></span>
                          <% if (platformData.requirements.minimum) { %>
                            <p><b>Minimum Requirements:</b> <%= platformData.requirements.minimum %></p>
                          <% } %>
                          <span class="mx-1 text-uppercase fw-bold block lh-lg">System requirements <%= platformData.platform.name %></span>
                          <% if (platformData.requirements.recommended) { %>
                            <p><b>Recommended Requirements:</b> <%= platformData.requirements.recommended %></p>
                          <% } %>
                        <% } %>
                      <% }); %>
                      <% if (!requirementsExist) { %>
                        <p class="fw-semibold">No system requirements available.</p>
                      <% } %>
                    </div>
                  <% } %>


                  
             
      
       
       
</div>